{
  "private": true,
  "type": "module",
  "name": "@screenlayer/monorepo",
  "version": "0.0.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "browserslist": [
    "baseline 2025"
  ],
  "prettier": "@epreston/prettier-config",
  "packageManager": "npm@11.8.0",
  "engines": {
    "node": "^22.22.0 || >=24.13.0"
  },
  "scripts": {
    "start": "vite --open",
    "dev": "vite",
    "build": "node scripts/build.js",
    "check-types": "tsc --project tsconfig.json --incremental --allowJs --checkJs --noEmit",
    "clean": "rimraf -g -v packages/*/dist temp .eslintcache",
    "lint": "eslint --ext .js,.cjs,.mjs --report-unused-disable-directives .",
    "test": "vitest run",
    "test-watch": "vitest",
    "test-coverage": "vitest run --coverage.enabled",
    "format": "prettier --check --cache \"**/*.{?(c|m)[tj]s?(x),vue}\"",
    "format-fix": "prettier --write --cache \"**/*.{?(c|m)[tj]s?(x),vue}\"",
    "storybook": "cd apps/design && npm run dev"
  },
  "devDependencies": {
    "@epreston/eslint-config": "^2.3.0",
    "@epreston/prettier-config": "^2.1.0",
    "@epreston/tsconfig": "^1.2.1",
    "@rollup/plugin-alias": "^6.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-replace": "^6.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "execa": "^9.6.1",
    "jsdom": "^27.4.0",
    "minimist": "^1.2.8",
    "picocolors": "^1.1.1",
    "prettier": "^3.8.1",
    "pretty-bytes": "^7.1.0",
    "rimraf": "^6.1.2",
    "rollup-plugin-esbuild": "^6.2.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "pinia": "^3.0.4",
    "vue": "^3.5.27"
  }
}
