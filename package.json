{
  "private": true,
  "type": "module",
  "name": "@screenlayer/monorepo",
  "version": "0.0.3",
  "packageManager": "npm@10.2.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "browserslist": [
    "Chrome >= 112",
    "ChromeAndroid >= 112",
    "Edge >= 112",
    "Firefox >= 112",
    "FirefoxAndroid >= 112",
    "Safari >= 16.4",
    "iOS >= 16.4",
    "not dead"
  ],
  "eslintConfig": {
    "root": true,
    "extends": "@epreston/eslint-config"
  },
  "prettier": "@epreston/prettier-config",
  "scripts": {
    "start": "vite --open",
    "dev": "vite",
    "build": "node scripts/build.js",
    "check-types": "tsc --project tsconfig.json --incremental --allowJs --checkJs --noEmit",
    "clean": "rimraf -g packages/*/dist temp .eslintcache",
    "lint": "eslint --ext .vue,.js,.jsx,.cjs,.mjs --report-unused-disable-directives .",
    "test": "vitest run",
    "test-watch": "vitest",
    "test-coverage": "vitest run --coverage.enabled",
    "format": "prettier --check --cache \"**/*.[tj]s?(x)\"",
    "format-fix": "prettier --write --cache \"**/*.[tj]s?(x)\"",
    "storybook": "cd apps/design && npm run dev"
  },
  "devDependencies": {
    "@epreston/eslint-config": "^1.1.0",
    "@epreston/prettier-config": "^2.0.0",
    "@epreston/tsconfig": "^1.0.1",
    "@rollup/plugin-alias": "^5.0.1",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/plugin-terser": "^0.4.4",
    "@vitejs/plugin-vue": "^4.4.1",
    "@vitest/coverage-v8": "^0.34.6",
    "eslint": "^8.53.0",
    "execa": "^8.0.1",
    "jsdom": "^22.1.0",
    "minimist": "^1.2.8",
    "picocolors": "^1.0.0",
    "prettier": "^3.1.0",
    "pretty-bytes": "^6.1.1",
    "rimraf": "^5.0.5",
    "rollup-plugin-esbuild": "^6.1.0",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vitest": "^0.34.6"
  },
  "dependencies": {
    "pinia": "^2.1.7",
    "vue": "^3.3.8"
  },
  "engines": {
    "node": "^18.18.0 || >=20.9.0"
  }
}
