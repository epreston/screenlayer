{
  "private": true,
  "type": "module",
  "name": "@screenlayer/monorepo",
  "version": "0.0.3",
  "packageManager": "npm@10.2.2",
  "workspaces": [
    "packages/*"
  ],
  "browserslist": "Chrome >= 112, ChromeAndroid >= 112, Edge >= 112, Firefox >= 112, FirefoxAndroid  >= 112,  Safari >= 16.4, iOS >= 16.4, not dead",
  "eslintConfig": {
    "root": true,
    "extends": "@epreston/eslint-config"
  },
  "prettier": "@epreston/prettier-config",
  "scripts": {
    "dev": "vite",
    "build": "vite build --emptyOutDir",
    "start": "vite --open",
    "lint": "eslint --ext .js --report-unused-disable-directives .",
    "test": "vitest run",
    "test-watch": "vitest",
    "test-coverage": "vitest run --coverage",
    "format": "prettier --check --cache \"**/*.[tj]s?(x)\"",
    "format-fix": "prettier --write --cache \"**/*.[tj]s?(x)\""
  },
  "devDependencies": {
    "@epreston/eslint-config": "^1.1.0",
    "@epreston/prettier-config": "^2.0.0",
    "@epreston/tsconfig": "^1.0.1",
    "@vitest/coverage-v8": "^0.34.6",
    "eslint": "^8.53.0",
    "jsdom": "^22.1.0",
    "prettier": "^3.1.0",
    "vite": "^4.5.0",
    "vitest": "^0.34.6"
  },
  "engines": {
    "node": "^18.18.0 || >=20.9.0"
  }
}
